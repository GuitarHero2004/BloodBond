<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".fragment.DonorMainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Dashboard Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/donor_main_dashboard"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginEnd="16dp"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/notifications"
                android:background="@null" />
        </LinearLayout>

        <!-- Search Bar for Filtering Donation Sites -->
        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchSites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:queryHint="Search donation sites"
            android:iconifiedByDefault="false"
            android:layout_marginBottom="16dp"/>

        <!-- RecyclerView to display the donation sites -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/donationSitesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>
</ScrollView>
